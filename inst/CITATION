citHeader("To cite scfind in publications use:")

citEntry(entry="article",
         title = "Fast searches of large collections of single cell data using scfind",
         author = personList(
             as.person("Jimmy Tsz Hang Lee"),
             as.person("Nikolaos Patikas"),
             as.person("Vladimir Yu. Kiselev"),
             as.person("Martin Hemberg")),
         year = 2019,
         journal = "bioRxiv",
         url = "https://doi.org/10.1101/788596",
         textVersion = 
             paste(
                 "Jimmy Tsz Hang Lee, Nikolaos Patikas, Vladimir Yu. Kiselev, Martin Hemberg (2019): ", 
                 "Fast searches of large collections of single cell data using scfind",
                 "github,",
                 "URL: https://github.com/hemberg-lab/scfind" )
         )
