citHeader("To cite scmap in publications use:")

citEntry(entry="article",
         title = "scfind - Fast search for genes in large scRNA-seq collections",
         author = personList(
             as.person("Nikolaos Patikas"),
             as.person("Jimmy Lee"),
             as.person("Vladimir Yu. Kiselev"),
             as.person("Martin Hemberg")),
         year = 2019,
         journal = "bioRxiv",
         url = "https://github.com/hemberg-lab/scfind",
         textVersion = 
             paste(
                 "Nikolaos Patikas, Jimmy Lee, Vladimir Yu. Kiselev, Martin Hemberg (2019): ", 
                 "scfind - Fast search for genes in large scRNA-seq collections",
                 "github,",
                 "URL: https://github.com/hemberg-lab/scfind" )
         )
